@model RegisterViewModel

@{
    ViewData["Title"] = "Register Page";
}


<div class="square-center">
    <div class="about">
        <h1>Register</h1>

        <div class="form">
            <form method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>

                <div>
                    <input class="input__data" asp-for="UserName" placeholder="First name" type="text" />
                    <span asp-validation-for="UserName"></span>
                </div>

                <div>
                    <input class="input__data" asp-for="Email" placeholder="Email" type="text" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div>

                    <input class="input" asp-for="Password" placeholder="******" type="password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div>

                    <input class="input" asp-for="PasswordConfirm" placeholder="******" type="password" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>

                <div>
                    <input class="button" type="submit" value="SignUp" />
                </div>

            </form>
        </div>
    </div>
</div>

@section css {
    <link href="~/css/home.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/profile.css" rel="stylesheet" asp-append-version="true" />
}
